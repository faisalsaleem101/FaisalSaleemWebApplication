@{
    ViewData["Title"] = "Dashboard";
}

<head>
    <link rel="stylesheet" href="~/css/dashboard/navigation-dark.css">
    <link rel="stylesheet" href="~/lib/slicknav/slicknav.min.css">
    <script src="https://kit.fontawesome.com/266c607635.js"></script>
</head>

<div>
    <div>
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="section_title">
                    <h2>Dashboard</h2>
                </div>
            </div>

        </div>
    </div>

    <nav class="menu-navigation-dark">
        <a asp-action="Index" asp-controller="Customers"><i class="fas fa-users"></i><span>Customers</span></a>
        <a asp-action="Index" asp-controller="Orders"><i class="far fa-list-alt"></i><span>Orders</span></a>
        <a href="#"><i class="fas fa-cube"></i><span>Products</span></a>
        <a href="#"><i class="fas fa-truck"></i><span>Vendors</span></a>

    </nav>



    @section scripts
    {
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="~/lib/slicknav/jquery.slicknav.min.js"></script>
    <script>

        $(function () {

            var menu = $('.menu-navigation-dark');
            menu.slicknav();

            // Mark the clicked item as selected
            menu.on('click', 'a', function () {
                var a = $(this);

                a.siblings().removeClass('selected');
                a.addClass('selected');
            });
        });

    </script>
    }
</div>



